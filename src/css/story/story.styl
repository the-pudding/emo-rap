/* CUSTOM STORY STYLE */

.see-more
  display flex
  background-color #e8e8e9
  border-radius 3px
  width 120px
  padding 0px 12px
  padding-top 3px
  padding-left 4px
  justify-content center
  margin-top 30px
  cursor hand
  cursor pointer
  p
    margin 0
    pointer-events none
    font-family $atlas
    color #4a4a4a
    font-size 13px
    font-weight 500
    margin-left 5px
    line-height 24px
    user-select none
  div
    width 20px
    pointer-events none
    svg
      stroke #4a4a4a
      width 100%


.full-song
  width 633px
  margin 0 auto
  margin-bottom 2rem
  padding-left 320px
  margin-top -60px
  display none
  .track-line
    line-height 1.3
    .track-word
      font-size 15px


.saddest-songs
  display flex
  flex-direction column
  height 530px
  width 900px
  flex-wrap wrap
  .saddest-song-track
    margin 0
    font-family $atlas
    width 400px
    //background-color rgba(24,96,79,.1)
    margin-right 0rem
    font-weight 500
    font-size 12px
    color #18604F
    position relative
    border-bottom 1px solid #ccc
    &:first-of-type
      .saddest-song-track-percent
        &:after
          content 'sad'
          position absolute
          margin-left 5px
          font-weight 500
    .saddest-song-track-count
      font-family $atlas
      color #999
      font-weight 600
      font-size 11px
      width 15px
      margin-right 4px
      position relative
      display inline-block
      text-align right
    .saddest-song-track-title
      color #666
      font-size 12px
      font-family $atlas
      text-transform capitalize
      font-weight 500
    .saddest-song-track-percent
      color #000
      font-size 12px
      font-family $atlas
      text-transform capitalize
      font-weight 400
      position absolute
      right 0px
      top 0px
  .emo-top-song
    color #28115A
    //background-color rgba(40,17,90,.1)


.chart-title
  font-size 30px
  font-family $futura
  text-align center
  margin-bottom 0px
  text-transform lowercase
.prose
  font-family $atlas
  font-size 16px
  font-weight 400
  color #111
  width 633px
  padding 0px
  margin 0 auto
  margin-bottom 1.5rem

.prose-big
  font-size 18px

.sad-word
  color $sadBlue
  font-weight 600

body
  background $backgroundColor

header
  background $backgroundColor

.small-text
  font-size 12px

.track-line
  font-family $atlas
  line-height 1.7
  margin 0 auto
  .track-word
    margin-right 4px
    color rgba(0,0,0,.5)
    font-size 17px
    &:last-of-type
      margin 0px
  .big-word
    //font-size 21px
    color black
    font-weight 500
  .sad-word
    background-color $lightBlue
    padding 0 3px
.results
  display flex
  margin-top 20px
  font-family $atlas
  .break-down
    margin 0
    font-size 14px
    span
      //color $sadBlue
      margin 0px
      //background $lightBlue
      font-weight 500
      //padding 0 3px
  .percent
    //color $sadBlue
    margin 0px
    font-weight 600
    font-size 14px
    margin-right 10px
    padding-right 10px
    border-right 3px solid #D2D2D2
    span
      background $lightBlue
      padding 2px 5px
      margin-right 4px

.explanation
  width 633px
  margin 0 auto
  margin-top 4rem
  position relative
  margin-bottom 3rem
  .left-col
    width 300px
    .prose
      width 100%
  .right-col
    position absolute
    left 320px
    font-family $atlas
    top 0px
    .track-name
      margin 0px
      font-size 14px
      span
        font-family $atlas
        margin 0
        color #666666
        border-bottom 2px solid #EBEBEB
        padding-bottom 5px
    .track-content
      margin-top 20px
.song-quote
  font-family $atlas
  max-width 550px
  margin 0 auto
  margin-top 2rem
  display flex
  margin-bottom 2rem
  .audio-controls
    width 60px
    cursor hand
    cursor pointer
    background #ECECEC
    border-radius 5px
    padding 10px 0px
    height 60px
    margin-top 5px
    margin-right 15px
    .volume-on
      display block
    .volume-off
      display none
    &:hover
      background #bbb
    p
      text-transform capitalize
      pointer-events none
      font-family $atlas
      font-size 15px
      width 100%
      text-align center
      margin-top -10px
      //line-height 10px
    svg
      width 100%
      pointer-events none
      polygon
        fill black
  .playing
    .show-face
      .verse-face
        display inline-block
  audio
    width 250px
    margin-top 20px

  p
    margin 0
    font-size 18px
    transition color 1s
    .verse-face
      background-image url("assets/images/faces.png")
      margin 0 auto
      background-size cover
      position absolute
      width 30px
      height 30px
      background-position-x -243px
      margin-left 10px
      display none
    .highlight-span
      //background $lightBlue
      padding .05em 0
      font-weight 600
.emo-index-wrapper
  margin-top 50px
  .emo-index
    font-family 'Atlas Grotesk Web'
    position relative
    padding-bottom 1000px
    .tool-tip
      background white
      box-shadow 2px 2px 10px rgba(0, 0, 0, 0.10)
      border-radius 3px
      width auto
      padding 7px
      position absolute
      top 0px
      left 0px
      z-index 1000
      display none
      .tool-tip-head
        font-size 14px
        font-weight 500
        margin-bottom 5px
        border-bottom 1px solid #ccc
        padding-bottom 3px
        span
          font-weight 400
      .tool-tip-track
        display flex
        font-size 12px
        .tool-tip-track-track
          color black
          font-size 12px
          font-weight 500
        .tool-tip-track-percent
          color #666
          font-weight 500
          margin-left 5px
          span
            font-size 10px
            color #666


    svg
      margin 0 auto
      display block
      overflow visible
    .face-div
      position absolute
      top 0px
      left 0px
      right 0px
      margin 0 auto
      pointer-events none
      .face-container
        .face-img
          background-image url(assets/images/faces.png)
          margin 0 auto
          background-size cover
          position relative
          .face-img-percent
            font-size 12px
            width 100px
            text-align center
            margin 0 auto
            margin-top 10px
            position absolute
            top 0px
            left 0px
            right 0px

    .axis-head-line
      stroke #D7D7D7
      shape-rendering crispEdges
    .axis-head
      font-size 18px
      font-family $futura
      text-transform uppercase
    .emo-head
      fill #28115A
    .hip-hop-head
      fill #18604F
    .axis-percent
      font-size 15px
      font-weight 600
      dominant-baseline hanging
      alignment-baseline hanging
      tspan
        &:first-of-type
          text-shadow 1px 1px 0px white, 1px 0px 0px white, 0px 1px 0px white, -1px 0px 0px white, 0px -1px 0px white, 0px 0px 0px white, -1px -1px 0px white, -1px 1px 0px white, 1px -1px 0px white
          letter-spacing -.4px
        &:last-of-type
          font-size 12px
          font-weight 300
    .axis-text
      font-size 11px
      font-weight 500
    .emo-band-hover-percent
      font-size 12px
      font-weight 500
      text-anchor middle
      fill #545454
      display none
    .rect-g
      rect
        pointer-events all
        cursor hand
        cursor pointer
        //visibility hidden
      .rap-rect
        fill rgba(24,96,79,.1)
      .emo-rect
        fill rgba(40,17,90,.1)
    .emo-index-axis
      fill #EDEDED
    .hip-hop-artist
      fill #18604F
    .emo-artist
      fill #28115A
    .emo-index-band
      pointer-events none
      .album-index
        font-size 13px
        font-family $futura
        fill #6b6b6b
        text-transform lowercase
        padding-left 10px
      .artist-index
        font-size 15px
        font-family $futura
        text-transform uppercase
        font-weight 500
        letter-spacing 0px

/* CUSTOM STORY STYLE */

.emo-index
  font-family 'Atlas Grotesk Web'
  .axis-percent
    font-size 15px
    font-weight 600
    dominant-baseline hanging
    alignment-baseline hanging
    &:last-of-type
      dominant-baseline text-after-edge
      alignment-baseline text-after-edge
    tspan
      &:first-of-type
        text-shadow 1px 1px 0px white, 1px 0px 0px white, 0px 1px 0px white, -1px 0px 0px white, 0px -1px 0px white, 0px 0px 0px white, -1px -1px 0px white, -1px 1px 0px white, 1px -1px 0px white
        letter-spacing -.4px
      &:last-of-type
        font-size 12px
        font-weight 300
  .axis-text
    font-size 11px
    font-weight 500
  .rect-g
    .rap-rect
      fill rgba(24,96,79,.1)
    .emo-rect
      fill rgba(40,17,90,.1)
  .emo-index-axis
    fill #EDEDED
  .hip-hop-artist
    fill #18604F
  .emo-artist
    fill #28115A
  .emo-index-band
    .album-index
      font-size 12px
      font-family 'Atlas Grotesk Web'
      fill #3e3d3d
      padding-left 10px
    .artist-index
      font-size 15px
      font-family 'Atlas Grotesk Web'
      font-weight 500
      letter-spacing -.4px

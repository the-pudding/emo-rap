/* CUSTOM STORY STYLE */

.emo-index
  font-family 'Atlas Grotesk Web'
  position relative
  padding-bottom 1000px
  .tool-tip
    background white
    box-shadow 2px 2px 10px rgba(0, 0, 0, 0.10)
    border-radius 3px
    width auto
    padding 7px
    position absolute
    top 0px
    left 0px
    z-index 1000
    .tool-tip-head
      font-size 14px
      font-weight 500
      margin-bottom 5px
      border-bottom 1px solid #ccc
      padding-bottom 3px
      span
        font-weight 400
    .tool-tip-track
      display flex
      font-size 12px
      .tool-tip-track-track
        color black
        font-size 12px
        font-weight 500
      .tool-tip-track-percent
        color #666
        font-weight 500
        margin-left 5px


  svg
    margin 0 auto
    display block
    overflow visible
  .face-div
    position absolute
    top 0px
    left 0px
    right 0px
    margin 0 auto
    pointer-events none
    .face-container
      .face-img
        background-image url(assets/images/faces.png)
        margin 0 auto
        background-size cover
        position relative
        .face-img-percent
          font-size 12px
          width 100px
          text-align center
          margin 0 auto
          margin-top 10px
          position absolute
          top 0px
          left 0px
          right 0px

  .axis-head-line
    stroke #D7D7D7
    shape-rendering crispEdges
  .axis-head
    font-size 15px
  .emo-head
    fill #28115A
  .hip-hop-head
    fill #18604F
  .axis-percent
    font-size 15px
    font-weight 600
    dominant-baseline hanging
    alignment-baseline hanging
    tspan
      &:first-of-type
        text-shadow 1px 1px 0px white, 1px 0px 0px white, 0px 1px 0px white, -1px 0px 0px white, 0px -1px 0px white, 0px 0px 0px white, -1px -1px 0px white, -1px 1px 0px white, 1px -1px 0px white
        letter-spacing -.4px
      &:last-of-type
        font-size 12px
        font-weight 300
  .axis-text
    font-size 11px
    font-weight 500
  .emo-band-hover-percent
    font-size 12px
    font-weight 500
    text-anchor middle
    fill #545454
    display none
  .rect-g
    rect
      pointer-events all
      cursor hand
      cursor pointer
      //visibility hidden
    .rap-rect
      fill rgba(24,96,79,.1)
    .emo-rect
      fill rgba(40,17,90,.1)
  .emo-index-axis
    fill #EDEDED
  .hip-hop-artist
    fill #18604F
  .emo-artist
    fill #28115A
  .emo-index-band
    pointer-events none
    .album-index
      font-size 12px
      font-family 'Atlas Grotesk Web'
      fill #3e3d3d
      padding-left 10px
    .artist-index
      font-size 15px
      font-family 'Atlas Grotesk Web'
      font-weight 500
      letter-spacing -.4px
